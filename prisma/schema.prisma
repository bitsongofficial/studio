datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public", "web3auth"] // indexer, nft...

  // Only if you enable `postgresqlExtensions` preview feature
  // extensions        = [hstore(schema: "myHstoreSchema"), pg_trgm, postgis(version: "2.1")]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]

  // previewFeatures = ["postgresqlExtensions"]
}

model User {
  id String @id @unique

  address  String  @unique
  username String?
  avatar   String?
  cover    String?

  auth_session UserSession[]
  key          UserKey[]
  Podcast      Podcast[]
  Episode      Episode[]

  @@schema("web3auth")
}

model UserSession {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@schema("web3auth")
}

model UserKey {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@schema("web3auth")
}

model Podcast {
  id          String    @id @unique @default(uuid())
  name        String
  description String
  image       String
  author      String
  category    String
  language    String
  content     String
  episodes    Episode[]
  user_id     String
  user        User      @relation(references: [id], fields: [user_id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@index([user_id])
  @@schema("public")
}

model Episode {
  id          String        @id @unique @default(uuid())
  title       String?
  description String?
  image       String?
  audio       String
  length      Int
  plays       Int
  status      EpisodeStatus
  format      String
  podcast_id  String
  user_id     String
  podcast     Podcast       @relation(references: [id], fields: [podcast_id], onDelete: Cascade)
  user        User          @relation(references: [id], fields: [user_id], onDelete: Cascade)
  createdAt   DateTime      @default(now())

  @@index([podcast_id, user_id])
  @@schema("public")
}

enum EpisodeStatus {
  DRAFT
  PUBLISHED
  ARCHIVED

  @@schema("public")
}
